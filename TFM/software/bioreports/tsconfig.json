{
  "compilerOptions": {
      "sourceMap": true,
      "outDir": "dist",
      "module": "commonjs",
      "types": [
          "node"
      ],
      "moduleResolution": "node",
      "baseUrl": ".",
      "target": "es2016",
      "paths": {
          "@Utils": [
              "src/modules/utils/Utils.module"
          ],
          "@Environment": [
              "src/modules/main/environment"
          ]
      },
      "noImplicitAny": true
  },
  "exclude": [
      "node_modules"
  ],
  "include": [
      "src/**/*"
  ]
}
  